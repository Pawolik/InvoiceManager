@model IEnumerable<InvoiceManager.Models.Domains.Product>


@{
    ViewBag.Title = "Products";
}

<h1>Produkty</h1>

<button class="btn btn-primary mb-3"
        onclick='window.location.href="@Url.Action("Create", "Product")"'>
    Dodaj pozycję
</button>

@if (Model != null && Model.Any())
{
    <table class="table table-hover table-striped mt-3 mb-5">
        <thead>
            <tr>
                <th scope="col">Nazwa</th>
                <th scope="col">Wartość</th>
                <th scope="col">Akcje</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td><a href="@Url.Action("Edit", "Product", new { id = product.Id })" class="btn btn-primary btn-sm">Edytuj</a></td>
                    <td>@product.Name</td>
                    <td>@product.Value.ToString("C")</td>
                    <td>                        
                        <button class="btn btn-danger btn-sm" onclick="deleteProduct('@product.Id', this)">Usuń</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>Brak produktów do wyświetlenia</div>
}

@section Scripts
{
    <script type="text/javascript">
        function deleteProduct(id, btn) {
            if (!confirm("Czy na pewno chcesz usunąć ten produkt?"))
                return;

            $.ajax({
                type: "POST",
                url: "@Url.Action("Delete", "Product")",
                data: { id: id },
                success: function (data) {
                    if (data.Success) {
                        var row = btn.parentNode.parentNode;
                        row.parentNode.removeChild(row);
                    } else {
                        alert(data.Message);
                    }
                },
                error: function (data) {
                    alert(data.Message);
                },
                datatype: 'json'
            });
        }
    </script>
}